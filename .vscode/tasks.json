{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install deps (npm ci or npm i)",
			"type": "shell",
			"command": "bash",
			"args": [
				"-lc",
				"if [ -f package-lock.json ]; then npm ci; else npm install; fi"
			],
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "Install deps (npm install)",
			"type": "shell",
			"command": "npm",
			"args": [
				"install"
			],
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "Build react app",
			"type": "shell",
			"command": "npm",
